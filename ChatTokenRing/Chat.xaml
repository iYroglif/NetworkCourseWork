        xmlns:local="clr-namespace:ChatTokenRing"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox" Text="Введите сообщение" LostFocus="textBox_LostFocus"  HorizontalAlignment="Left" Height="32" Margin="105,316,0,0" VerticalAlignment="Top" Width="429" KeyDown="textBox_KeyDown" GotFocus="textBox_GotFocus"/>
        <Button x:Name="button" Content="Отправка" HorizontalAlignment="Left" Margin="572,316,0,0" VerticalAlignment="Top" Width="117" Height="32" Click="button_Click"/>
        <ListBox x:Name="listBox" Height="236" Margin="105,52,105,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
